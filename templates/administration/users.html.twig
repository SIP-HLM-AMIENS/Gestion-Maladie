{% extends 'baseadmin.html.twig' %}

{% block body %}
    <h1>Gestion des utilisateurs</h1>
    <br/>
    <div class="section">
        <a type="button" class="btn btn-primary" href="{{ path('inscription') }}">Ajouter un utilisateur</a>
    </div>
    <br />
    <div class="section">
        <table class="table table-hover">
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Password</th>
                <th>Admin</th>
                <th>Actions</th>
            </tr>
            {% for user in users %}
            <tr>
                <td> {{ user.username }} </td>
                <td> {{ user.email }} </td>
                <td> {{ user.password }} </td>
                <td> 
                    {% if user.isAdmin %}
                        Vrai
                    {% else %}
                        Faux
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-link">Modifier</button>
                        <form action="{{ url('admin_post_delete', {id: user.id}) }}" method="post" id="delete-form">
                            <button type="submit" class="btn btn-link">
                                Supprimer
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}